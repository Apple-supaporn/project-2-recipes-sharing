<header>
    <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Jura&family=Kanit:wght@200&family=Open+Sans:wght@400;700&family=Righteous&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Jura&family=Kanit:wght@200&family=Montserrat:wght@400;700&family=Open+Sans:wght@400;700&family=Righteous&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Black+Han+Sans&family=Jura&family=Kanit:wght@200&family=Montserrat:wght@400;700&family=Open+Sans:wght@400;700&family=PT+Serif:wght@400;700&family=Righteous&display=swap" rel="stylesheet">
    <div class="header-websitename">SpiceMe</div>
    <ul class="header-list">
        <% if (currentUser) { %>
            <li>Welcome <%= currentUser.username %></li>
            <li><a href="/recipes/">Home</a></li>
            <li><a href="/recipes/new">Create New Recipe</a></li>

            <li class="header-logout">
                <form action="/sessions?_method=DELETE" method="POST">
                    <input type="submit" value="Log out">
                </form>
            </li>
        <% } else { %>
            <li><a href="/sessions/new">Log in </a></li>
            <li><a href="/users/new">Sign up </a></li>
        <% } %>
    </ul>
</header>